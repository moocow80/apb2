<%= form_for @project do |f| %>
  <%= f.error_messages %>
  <div class="field">
    <% Tag.where(:tag_type => "category").each do |tag| %>
      <%= check_box_tag "project[tag_ids][]", tag.id, @project.tags.include?(tag) %>
      <%= label_tag "project[tag_ids][]", tag.name.titleize %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details %>
  </div>
  <div class="field">
    <%= f.label :goals %><br />
    <%= f.text_area :goals %>
  </div>
  <div class="actions">
    <%= f.submit "Create Your Project" %>
  </div>
<% end %>



  <div class="page-header">
    <h1>Users</h1>
  </div>


  <table class="table table-striped">
    <thead>
      <tr>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.email %>
          <div class="pull-right">
            <a class="btn micro"><i class="icon-pencil"></i>&nbsp;Edit</a>
            <a class="btn btn-danger btn-micro"><i class="icon-remove icon-white"></i></a>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<div id="header">
  <%= link_to "Austin Pro Bono", root_path, :id => "logo" %>
	<ul class="navigation">
		<li><%= link_to "Home", root_path %></li>
		<li><%= link_to "Projects", "/projects" %></li>
		<li><%= link_to "Organizations", "/organizations" %></li>
		<li><%= link_to "How It Works", "/how-it-works" %></li>
	</ul>
  <div class="login">
    <% if current_user %>
      <strong><%= current_user.email %></strong> | 
      <% if current_user.is_organization %>
        <%= link_to "My Organizations", user_organizations_path(current_user) %> |
      <% elsif !current_user.is_organization %>
        <%= link_to "My Profile", profile_path %> | 
      <% end %>
      <%= link_to "Log Out", logout_path %>
    <% else %>
      <%= link_to "Log In", login_path %>
      |
      <%= link_to "Register", register_path %>
    <% end %>
  </div>
  <div class="clear"></div>
</div>

<!DOCTYPE html>
<html>
<head>
  <title>AustinProBono - Admin</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]--> 
  <%= stylesheet_link_tag "admin/admin" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
    	<div class="container-fluid">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a href="#" class="brand">APB Admin Control Panel</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li<% if current_page?(:controller => "admin/users") %> class="active" <% end %>>
              <%= link_to(admin_users_path) do %>
                <i class="icon-user icon-white"></i>&nbsp;Users
              <% end %>
            </li>
            <li<% if current_page?(:controller => "organizations") %> class="active" <% end %>>
              <%= link_to(admin_organizations_path) do %>
                <i class="icon-flag icon-white"></i>&nbsp;Organizations
              <% end %>
            </li>
            <li<% if current_page?(:controller => "projects") %> class="active" <% end %>>
              <%= link_to(admin_projects_path) do %>
                <i class="icon-list-alt icon-white"></i>&nbsp;Projects
              <% end %>
            </li>
            <li<% if current_page?(:controller => "declined_volunteers") %> class="active" <% end %>>
              <%= link_to(admin_declined_volunteers_path) do %>
                <i class="icon-warning-sign icon-white"></i>&nbsp;Declined Volunteers
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <% flash.each do |name,msg| %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      	<a class="close" data-dismiss="alert">x</a>
      </div>
    <% end %>
    
    <%= yield %>
  </div>
    
  <%= debug(params) if Rails.env.development? %>


</body>
</html>
